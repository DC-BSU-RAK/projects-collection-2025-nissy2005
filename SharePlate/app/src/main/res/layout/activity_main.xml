<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="32dp">

    <LinearLayout
        android:id="@+id/mainContent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNav"
        android:gravity="center"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🍛 SharePlate"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#070410"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/appDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leftovers? Share or grab a free meal nearby!"
            android:textSize="16sp"
            android:textColor="#070410"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/btnAddFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📝 Add Food"
            android:backgroundTint="#F7C137"
            android:textColor="#070410"
            android:elevation="4dp"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnBrowseFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🍽️ Order Food"
            android:backgroundTint="#F7C137"
            android:textColor="#070410"
            android:elevation="4dp"
            android:padding="12dp" />
    </LinearLayout>

    <!-- Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#F7C137"
        android:weightSum="3"
        android:gravity="center">

        <TextView
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="🏠 Home"
            android:textColor="#070410"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/navExplore"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="🔍 Explore"
            android:textColor="#070410"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="👤 Profile"
            android:textColor="#070410"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>

